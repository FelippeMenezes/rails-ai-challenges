<h1>Chats for <%= @challenge.name %></h1>

<div class="mb-4">
    <% if @chats.any? %>
        <ul>
            <% @chats.each do |chat| %>
                <li><%= link_to chat.title, chat_path(chat) %></li>
            <% end %>
        </ul>
    <% else %>
        There are no chats yet.
    <% end %>
</div>

<%= simple_form_for [@challenge, @chat] do |f| %>
    <%= f.button :submit, "New chat", class: "btn btn-primary" %>
<% end %>
