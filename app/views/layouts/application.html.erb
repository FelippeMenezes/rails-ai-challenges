<!DOCTYPE html>
<html>
  <head>
    <title>RailsAiChallenges</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <%= favicon_link_tag asset_path('logo.jpeg') %>
  </head>

  <body>
    <%= render "shared/navbar" %>
    <div class="container-fluid">
      <div class="row" data-controller="toggle">
        <nav class="col-md-2 sidebar pt-3" data-toggle-target="hideable">
          <%= render "shared/sidenav", challenges: @challenges %>
        </nav>
        <div class="col-md-10 my-4">
          <%= render "shared/flashes" %>
          <%= link_to "#", class: "d-none nav-link text-dark", data: {toggle_target: "show", action: "click->toggle#call"} do %>
            <i class="fa-regular fa-square-caret-left"></i>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
